generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Game {
  id                 String   @id @default(cuid())
  createdAt          DateTime @default(now())
  gameType           String
  build              String
  opponent           String
  first              Boolean  @default(true)
  result             String
  score              Int?
  tag1               String?
  tag2               String?
  notes              String?
  myDetachment       String?
  myFaction          String?
  myScore            Int?
  oppDetachment      String?
  oppFaction         String?
  oppScore           Int?
  photoUrls          String[] @default([])
  scoreSheetUrl      String?
  myArmyPdfUrl       String?
  oppArmyPdfUrl      String?
  myListText         String?
  oppListText        String?
  deploymentPhotoUrl String?
  t1PhotoUrl         String?
  t2PhotoUrl         String?
  t3PhotoUrl         String?
  t4PhotoUrl         String?
  t5PhotoUrl         String?
  deploymentNotes    String?
  t1Notes            String?
  t2Notes            String?
  t3Notes            String?
  t4Notes            String?
  t5Notes            String?
}
