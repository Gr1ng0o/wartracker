datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  gameType  String   // "40k" | "FaB"

  // commun
  build     String
  opponent  String
  first     Boolean  @default(true)
  result    String   // "W" | "L"
  score     Int?
  tag1      String?
  tag2      String?
  notes     String?

  // ===== 40k =====
  myFaction      String?
  myDetachment   String?
  oppFaction     String?
  oppDetachment  String?
  myScore        Int?
  oppScore       Int?

  // Listes d'arm√©e (PDF)
  armyListPdfUrl  String?   // liste 1 (existant)
  armyListPdfUrl2 String?   // liste 2 (nouveau)

  // Fiche de scores (PDF ou image)
  scoreSheetUrl   String?   // nouveau

  photoUrls       String[] @default([])
}
