generator client {
  provider = "prisma-client-js"
}

model Game {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  gameType  String   // "40k" | "FaB"

  // commun
  build     String
  opponent  String
  first     Boolean  @default(true)
  result    String   // "W" | "L" | "D" (si tu l'utilises)
  score     Int?
  tag1      String?
  tag2      String?
  notes     String?

  // ===== 40k =====
  myFaction      String?
  myDetachment   String?
  oppFaction     String?
  oppDetachment  String?
  myScore        Int?
  oppScore       Int?

  // ===== Uploads (optionnels) =====
  // PDF liste de ton arm√©e
  myArmyPdfUrl   String?

  // PDF liste de l'adversaire
  oppArmyPdfUrl  String?

  // Feuille de score (PDF ou image)
  scoreSheetUrl  String?

  // Photos diverses
  photoUrls      String[] @default([])
  deploymentPhotoUrl String?
t1PhotoUrl         String?
t2PhotoUrl         String?
t3PhotoUrl         String?
t4PhotoUrl         String?
t5PhotoUrl         String?
deploymentNotes String?
t1Notes         String?
t2Notes         String?
t3Notes         String?
t4Notes         String?
t5Notes         String?

}
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

